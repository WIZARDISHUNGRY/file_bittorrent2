<?xml version="1.0" encoding="ISO-8859-1" ?>
<package version="1.0">
    <name>File_Bittorrent</name>
    <summary>Decode and Encode data in Bittorrent format</summary>
    <description>This package consists of two classes which handles the encoding and decoding of data in Bittorrent format.
    You can also extract useful informations from .torrent files.</description>
    <license>PHP License</license>
    <maintainers>
        <maintainer>
            <user>tacker</user>
            <name>Markus Tacker</name>
            <email>m@tacker.org</email>
            <role>lead</role>
        </maintainer>
    </maintainers>
    <deps>
        <dep type="pkg" rel="ge" version="1.1.0">PHP_Compat</dep>
    </deps>
    <release>
        <version>0.1.7</version>
        <state>beta</state>
        <date>2005-06-20</date>
        <notes>Fixed Bug #3970 and Bug #4570.</notes>
        <filelist>
            <file role="php">File/Bittorrent/Encode.php</file>
            <file role="php">File/Bittorrent/Decode.php</file>
            <file role="doc">example.php</file>
            <file role="doc">torrentinfo.php</file>
            <file role="doc">freebsd.torrent</file>
        </filelist>
    </release>
    <changelog>
