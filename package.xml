<?xml version="1.0" encoding="ISO-8859-1" ?>
<package version="1.0">
    <name>File_Bittorrent</name>
    <summary>Decode and Encode data in Bittorrent format</summary>
    <description>This package consists of thre classes which handles the encoding and decoding of data in Bittorrent format.
    You can also extract useful informations from .torrent files and create .torrent files.</description>
    <license>PHP License</license>
    <maintainers>
        <maintainer>
            <user>tacker</user>
            <name>Markus Tacker</name>
            <email>m@tacker.org</email>
            <role>lead</role>
        </maintainer>
    </maintainers>
    <deps>
        <dep type="pkg" rel="ge" version="1.1.0">PHP_Compat</dep>
    </deps>
    <release>
        <version>1.0.0RC2</version>
        <state>beta</state>
        <date>tba</date>
        <notes>Added querying of the tracker to decoder.</notes>
        <filelist>
            <file role="php">File/Bittorrent/Encode.php</file>
            <file role="php">File/Bittorrent/Decode.php</file>
            <file role="php">File/Bittorrent/MakeTorrent.php</file>
            <file role="doc">example.php</file>
            <file role="doc">example_mktorrent.php</file>
            <file role="doc">torrentinfo.php</file>
            <file role="doc">scrape.php</file>
            <file role="doc">install-x86-universal-2005.0.iso.torrent</file>
        </filelist>
    </release>
    <changelog>
